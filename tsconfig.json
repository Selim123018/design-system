{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./types",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  